# Backend-only Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    curl \
    postgresql-client \
    && rm -rf /var/cache/apk/*

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./
COPY drizzle.config.ts ./

# Install all dependencies first
RUN npm ci --legacy-peer-deps && npm cache clean --force

# Copy source code
COPY . .

# Build the application (server only)
RUN npm run build:server

# Remove dev dependencies but keep production dependencies
RUN npm prune --production --legacy-peer-deps

# Add non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S ecoflow -u 1001

RUN chown -R ecoflow:nodejs /app

USER ecoflow

EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:5000/api/products || exit 1

CMD ["node", "dist/main-production.js"]
